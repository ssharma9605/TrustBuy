<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout

    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Bought a chair from Rajani few months ago.My best buy so far."
        android:layout_alignTop="@+id/ratingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/postedad"
        android:layout_alignStart="@+id/postedad" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:stepSize="0.5"
        android:rating="4"
        android:isIndicator="true"
        android:scaleX=".6"
        android:scaleY=".4"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView11"
        android:layout_toRightOf="@+id/ad_title"
        android:layout_toEndOf="@+id/ad_title" />

    <TextView
        android:id="@+id/postedAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted Ads"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_above="@+id/ad_title"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginBottom="15dp" />

    <ImageView
        android:id="@+id/postedad"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="image"
        android:background="#ccc"
        android:padding="2dp"
        android:src="@drawable/bicycle"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/postedAd"
        android:layout_alignStart="@+id/postedAd" />
    <TextView
        android:id="@+id/textView26"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:text="Hi there, looking to sell my bicycle. Fine condition.sale price:30 dollars"
        android:layout_alignTop="@+id/postedad"
        android:layout_toRightOf="@+id/postedad"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp" />

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bicycle For Sale"
        android:layout_above="@+id/postedad"
        android:layout_alignLeft="@+id/postedAd"
        android:layout_alignStart="@+id/postedAd"
        android:layout_marginBottom="11dp"
        android:textStyle="bold"
        android:textColor="#000"/>

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".6"
        android:scaleY=".4"
        android:rating="4"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/lbl_overall_rating"
        android:layout_toEndOf="@+id/lbl_overall_rating" />

    <TextView
        android:id="@+id/lbl_overall_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Rating"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/ratingBar2"
        android:layout_alignLeft="@+id/postedAd"
        android:layout_alignStart="@+id/postedAd"
        android:layout_marginBottom="19dp"
        />

</RelativeLayout>
</ScrollView>