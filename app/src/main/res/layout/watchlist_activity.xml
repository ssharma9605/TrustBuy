<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <Button
        android:id="@+id/watchlist_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="@string/view_watchlist"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_alignBaseline="@+id/watchlist_view_btn"
        android:layout_alignBottom="@+id/watchlist_view_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="146dp"
        android:layout_height="148dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"

        android:scaleType="fitXY"
        app:srcCompat="@drawable/bicycle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="148dp"
        android:layout_height="146dp"
        android:layout_marginTop="123dp"
        app:srcCompat="@drawable/murach"
        android:layout_below="@+id/watchlist_view_btn"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="7dp"
        android:layout_marginEnd="7dp" />

    <Button
        android:id="@+id/view_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_watchlist"
        android:layout_marginBottom="45dp"
        android:onClick="ViewAd"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:onClick="Delete"
        android:layout_alignBaseline="@+id/view_book"
        android:layout_alignBottom="@+id/view_book"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>